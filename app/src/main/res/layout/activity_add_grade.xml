<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/backgroundcolor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="2">

        <ImageView
            android:id="@+id/metaN"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:layout_weight="1"
            android:src="@drawable/not_achieved"
            android:padding="10dp"
            android:tag="N"
            android:layout_gravity="center"
            android:onClick="onSecondClick"/>

        <ImageView
            android:id="@+id/metaA"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:layout_weight="1"
            android:src="@drawable/achieved"
            android:padding="10dp"
            android:tag="A"
            android:layout_gravity="center"
            android:onClick="onSecondClick"/>

        <ImageView
            android:id="@+id/metaM"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:layout_weight="1"
            android:src="@drawable/merit"
            android:padding="10dp"
            android:tag="M"
            android:layout_gravity="center"
            android:onClick="onSecondClick"/>

        <ImageView
            android:id="@+id/metaE"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:layout_weight="1"
            android:src="@drawable/excellence"
            android:padding="10dp"
            android:tag="E"
            android:layout_gravity="center"
            android:onClick="onSecondClick"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/arrow1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:layout_weight="1"
            android:src="@drawable/triangle"
            android:paddingTop="20dp"/>

        <ImageView
            android:id="@+id/arrow2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:layout_weight="1"
            android:src="@drawable/triangle"
            android:paddingTop="20dp"/>

        <ImageView
            android:id="@+id/arrow3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:paddingTop="20dp"
            android:src="@drawable/triangle" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/goalGradeTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Goal Grade"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:textColor="?attr/textcolor"/>

        <TextView
            android:id="@+id/mockGradeTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Mock Grade"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:textColor="?attr/textcolor"/>

        <TextView
            android:id="@+id/finalGradeTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Final Grade"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:textColor="?attr/textcolor"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="horizontal"
        android:layout_marginBottom="35dp">


        <ImageView
            android:id="@+id/goalGradeImg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="top"
            android:padding="10dp"
            android:scaleType="fitStart"
            android:src="@drawable/plus"
            android:onClick="onFirstClick"/>

        <ImageView
            android:id="@+id/mockGradeImg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:scaleType="fitStart"
            android:src="@drawable/plus"
            android:onClick="onFirstClick"/>

        <ImageView
            android:id="@+id/finalGradeImg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:scaleType="fitStart"
            android:src="@drawable/plus"
            android:onClick="onFirstClick"/>

    </LinearLayout>
    <ImageView
        android:id="@+id/done"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="fitEnd"
        android:layout_weight="0.8"
        android:layout_margin="13dp"
        android:gravity="right"
        android:src="@drawable/tick_resized"
        android:onClick="onClick"/>
</LinearLayout>
