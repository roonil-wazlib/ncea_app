<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/app_back">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:paddingBottom="0dp"
        android:onClick="onResultsClick">

        <TextView
            android:id="@+id/ach"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#ff4488ff"
            android:gravity="center"
            android:textSize="25sp"
            android:textStyle="bold"
            android:maxLines="1"/>

        <TextView
            android:id="@+id/mer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#ff44ff88"
            android:gravity="center"
            android:textSize="25sp"
            android:textStyle="bold"
            android:maxLines="1"/>

        <TextView
            android:id="@+id/exc"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#ffff0000"
            android:gravity="center"
            android:textSize="25sp"
            android:textStyle="bold"
            android:maxLines="1" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:background="#ff000000"
        android:layout_marginBottom="5dp"
        android:onClick="onResultsClick">
        <TextView
            android:id="@+id/aCredits"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#aa4488ff"
            android:gravity="center"
            android:textSize="35sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mCredits"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#aa44ff88"
            android:gravity="center"
            android:textSize="35sp"
            android:textStyle="bold"
            android:maxLines="1"/>

        <TextView
            android:id="@+id/eCredits"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#aaff0000"
            android:gravity="center"
            android:textSize="35sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/noCredits"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="0"
            android:gravity="center"
            android:textSize="35sp"
            android:textColor="#ffffffff"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:onClick="onResultsClick">

        <LinearLayout
            android:id="@+id/mEndorseBar"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/m"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff44ff88"
                android:gravity="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:text="M"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="9"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#ff000000"
                android:padding="3dp">

                <TextView
                    android:id="@+id/eCredits2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#aaff0000"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/mCredits2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#aa44ff88"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/nullCredits"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#ff444444"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:maxLines="1"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/e"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffff0000"
                android:gravity="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:text="E"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="9"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#ff000000"
                android:padding="3dp">

                <TextView
                    android:id="@+id/eCredits3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#aaff0000"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textColor="#ffffd000"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/nullCredits2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#ff444444"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:maxLines="1"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Click for more results"
        android:textSize="8sp"
        android:textColor="#ffffffff"
        android:paddingLeft="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/Level1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/current_level_back"
            android:gravity="center"
            android:text="Level 1"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp" />

        <Button
            android:id="@+id/Level2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="onClick"
            android:text="Level 2" />

        <Button
            android:id="@+id/Level3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="onClick"
            android:text="Level 3" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:orientation="vertical">

        <ListView
            android:id="@+id/subjectList"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8">
        </ListView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/help"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:background="@android:color/transparent"
                android:text="?"
                android:textColor="#ffffffff"
                android:textSize="45sp"
                android:onClick="onClick"/>

            <TextView
                android:id="@+id/add_subject"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent"
                android:text="Add Subject:"
                android:textColor="#ffff0000"
                android:textSize="20sp"
                android:gravity="center|end"
                android:onClick="onClick"/>
            <Button
                android:id="@+id/newSubject"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:background="@android:color/transparent"
                android:onClick="onClick"
                android:text="+"
                android:textColor="#ffff0000"
                android:textSize="45sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>